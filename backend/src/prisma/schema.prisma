generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Idea {
  id          String   @id @default(uuid())
  title       String   @unique
  description String
  text        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id])
  userId      String
}

model User {
  id        String   @id @default(uuid())
  name      String   @unique
  fullName  String   @default("")
  password  String
  ideas     Idea[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
